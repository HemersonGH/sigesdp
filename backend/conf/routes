# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

POST    /login                                  Secure.authenticate
GET     /getAuthUser                            Secure.getAuthenticatedUser
GET     /logout                                 Secure.logout

POST 	/cadastrar-departamento					Departamentos.cadastraDepartamento
GET 	/departamentos							Departamentos.findAll
GET 	/departamentos-list						Departamentos.fieldSelect
GET   	/departamento/{id}						Departamentos.findById

POST 	/cadastrar-professor					Professores.cadastraProfessor
GET   	/professor/{id}							Professores.findById
GET 	/docentes							    Professores.findAll
GET 	/docente/{id}				     		Professores.findById

POST 	/cadastrar-disciplina					Disciplinas.cadastraDisciplina
GET 	/areas-conhecimento					    AreasConhecimento.findAll

GET 	/modalidades-bolsa					    ModalidadesBolsa.findAll
GET 	/modalidade-bolsa/{id}		     		ModalidadesBolsa.findById

# Home page
GET     /                                       Application.index

# Ignore favicon requests
GET     /favicon.ico                            404

# Map static resources from the /app/public folder to the /public path
GET     /public/                                staticDir:public

# Catch all
*       /{controller}/{action}                  {controller}.{action}
