# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Autenticação
POST    /login                                  Secure.authenticate
GET     /getAuthUser                            Secure.getAuthenticatedUser
GET     /logout                                 Secure.logout

# Departamentos
POST 	/departamento/novo						Departamentos.cadastraDepartamento
GET 	/departamentos							Departamentos.findAll
GET 	/departamentos-list						Departamentos.fieldSelect
GET   	/departamento/{id}						Departamentos.findById

# Cursos
POST 	/curso/novo								Cursos.cadastraCurso
GET 	/cursos								    Cursos.findAll
GET 	/curso/{id}					     		Cursos.findById
PUT 	/curso/atualiza		     				Cursos.atualizaCurso
DELETE 	/curso/remove/{id}			     		Cursos.removeCurso

# Docentes
POST 	/professor/novo							Professores.cadastraProfessor
GET 	/docentes							    Professores.findAll
GET 	/docente/{id}				     		Professores.findById
GET   	/docente/{id}							Professores.findById
GET   	/docente/alunos/{id}					Professores.findAlunos
GET   	/docente/email/							Professores.findByEmail
PUT 	/docente/atualiza		     			Professores.atualizaProfessor
DELETE 	/docente/remove/{id}			     	Professores.removeProfessor

# Disciplinas
POST 	/disciplina/novo						Disciplinas.cadastraDisciplina
GET 	/disciplina/{id}		     			Disciplinas.findById
PUT 	/disciplina/atualiza		     		Disciplinas.atualizaDisciplina
DELETE 	/disciplina/remove/{id}			     	Disciplinas.removeDisciplina

# Área do Conhecimento
GET 	/areas-conhecimento					    AreasConhecimento.findAll

# Modalidades Bolsa
GET 	/modalidades-bolsa					    ModalidadesBolsa.findAll
GET 	/modalidades-bolsa/{id}		     		ModalidadesBolsa.findById

# Alunos
POST 	/aluno/novo								Alunos.cadastraAluno
GET 	/alunos								    Alunos.findAll
GET 	/aluno/{id}					     		Alunos.findById
PUT 	/aluno/atualiza		     				Alunos.atualizaAluno
DELETE 	/aluno/remove/{id}			     		Alunos.removeAluno

# Home page
GET     /                                       Application.index

# Ignore favicon requests
GET     /favicon.ico                            404

# Map static resources from the /app/public folder to the /public path
GET     /public/                                staticDir:public

# Catch all
*       /{controller}/{action}                  {controller}.{action}
