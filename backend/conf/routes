# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

POST    /login                                  Secure.authenticate
GET     /getAuthUser                            Secure.getAuthenticatedUser
GET     /logout                                 Secure.logout
POST 	/cadastro-professor						Professores.cadastraProfessor
POST 	/cadastro-departamento					Departamentos.cadastraDepartamento
GET 	/departamentos							Departamentos.findAll
GET 	/departamento/{id}						Departamentos.findById

# Home page
GET     /                                       Application.index

# Ignore favicon requests
GET     /favicon.ico                            404

# Map static resources from the /app/public folder to the /public path
GET     /public/                                staticDir:public

# Catch all
*       /{controller}/{action}                  {controller}.{action}
